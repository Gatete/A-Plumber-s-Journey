          <argument>
            <kind>1</kind>
            <string>///Big Boo logic

//Check if the player does exist and move towards him if chasing
if ((instance_exists(obj_player)) &amp;&amp; (movenow)) {

    //If the player is at the left
    if (obj_player.x &lt; x) {
    
        //Move to the left
        hspeed += -0.025;
        
        //Set the turning animation
        if (fakexscale != -1) {
        
            //Set turning sprite
            sprite_index = spr_bigboo_turn;
            
            //Set facing direction
            fakexscale = -1;
            
            //Animate
            image_speed = 0.2;
            image_index = 0;
        }
    }
    
    //Otherwise, if it's at the right
    else if (obj_player.x &gt; x) {
        
        //Move to the right
        hspeed += 0.025;
        
        //Set the turning animation
        if (fakexscale != 1) {
        
            //Set turning sprite
            sprite_index = spr_bigboo_turn;
            
            //Set facing direction
            fakexscale = 1;
            
            //Animate
            image_speed = 0.2;
            image_index = 0;
        }        
    }
    
    //Vertical movement
    if (obj_player.y &gt; y)
        vspeed += 0.025;
    else
        vspeed += -0.025;
}
else {

    speed = max(0,abs(speed)-0.025)*sign(speed);
    if (speed &lt; 0.025)
        speed = 0;
}

//Cap speed
if (speed &gt; 0.75)
    speed = 0.75;
    
//Check the movement
movenowprev = movenow;

//Move towards the player if it exists
if (instance_exists(obj_player)) {

    //If the player is at the left and facing left
    if (obj_player.x &lt; x) {
    
        if (obj_player.xscale == -1)
            movenow = true;
        else
            movenow = false;
    }
    
    //Otherwise, do the opposite thing
    else if (obj_player.x &gt; x) {
    
        if (obj_player.xscale == 1)
            movenow = true;
        else
            movenow = false;
    }
}
else 
    movenow = false;
</string>
