            <string>///Goomba logic

//If there's no memory of a enemy below.
if (mebelow == noone) {

    //If a enemy is below, remember it.
    if (position_meeting(x,bbox_bottom+8,obj_goomba)) {
    
        //Ride above this goomba
        mebelow = collision_point(x,bbox_bottom+8,obj_goomba,0,0);
        
